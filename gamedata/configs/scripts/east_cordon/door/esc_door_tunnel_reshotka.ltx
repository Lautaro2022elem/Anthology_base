[logic]
active = ph_door@locked

[ph_door@locked]
closed = true
locked = true
snd_open_start = metal_small_close_stop
tip_open = tip_door_locked_reshotka
on_info = {+esc_quest_line_dungeon_complete} ph_door@closed

[ph_door@closed]
closed = true
locked = false
on_use = ph_door@open
snd_open_start = metal_small_open
snd_close_start = metal_small_close_start
snd_close_stop = metal_small_close_stop

[ph_door@open]
closed = false
locked = false
on_use = ph_door@closed
on_game_timer = 50 | ph_door@closed
snd_open_start = metal_small_open
snd_close_start = metal_small_close_start
snd_close_stop = metal_small_close_stop