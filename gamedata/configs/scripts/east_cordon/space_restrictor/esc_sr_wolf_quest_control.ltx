[logic]
active = sr_idle

[sr_idle]
on_info = {+spectrum_project_start +esc_dialog_wolf_the_first_penny_complite_and} sr_idle@2 
on_info2 = {+eac_quest_fee_complite} sr_idle@2 %+esc_the_first_penny_fail +esc_dialog_wolf_the_first_penny%
on_info3= {+esc_quest_fee_fail} sr_idle@2 %+esc_the_first_penny_fail +esc_dialog_wolf_the_first_penny%

[sr_idle@2]
on_game_timer = 1200 | sr_idle@2_1


[sr_idle@2_1]
on_info = {!zat_b7_is_night !surge_started =dist_to_actor_ge(25)} sr_idle@scenario_autosave %+esc_infa_open_quest_trimming =esc_sms_wolf_quest_trimming =give_task(esc_quest_talk_wolf)%
on_info2 = {!zat_b7_is_night !surge_started +esc_quest_work_for_beginner_fail =dist_to_actor_ge(25)} sr_idle@scenario_autosave %+esc_infa_open_quest_trimming =esc_sms_wolf_quest_trimming =give_task(esc_quest_talk_wolf)%
on_info3 = {!zat_b7_is_night !surge_started +esc_quest_work_for_beginner_complite =dist_to_actor_ge(25)} sr_idle@scenario_autosave %+esc_infa_open_quest_trimming =esc_sms_wolf_quest_trimming =give_task(esc_quest_talk_wolf)%

[sr_idle@scenario_autosave]
on_timer = 100 | {-save_esc_quest_trimming} %+save_esc_quest_trimming =scenario_autosave(st_save_esc_quest_trimming)%
on_info = {+save_esc_quest_trimming} sr_idle@3

[sr_idle@3]
on_info = {=is_day +eac_quest_trimming_complite} sr_idle@4 %=remove_squad(esc_squad_quest_trimming)%
on_info2 = {=is_day +esc_squad_quest_trimming_dead} sr_idle@4 %=remove_squad(esc_squad_quest_trimming)%
on_info3 = {=is_day +esc_squad_quest_trimming_reversed} sr_idle@4 %=remove_squad(esc_squad_quest_trimming)%

[sr_idle@4]
on_game_timer = 1000 | sr_idle@4_1

[sr_idle@4_1]
on_info = {!zat_b7_is_night !surge_started =dist_to_actor_ge(25)} sr_idle@scenario_autosave2 %+esc_wolf_quest_insurance_dialog_open =esc_sms_wolf_quest_insurance =give_task(esc_quest_insurance)%

[sr_idle@scenario_autosave2]
on_timer = 100 | {-save_esc_quest_insurance} %+save_esc_quest_insurance =scenario_autosave(st_save_esc_quest_insurance)%
on_info = {+save_esc_quest_insurance} sr_idle@5

[sr_idle@5]
on_info = {+esc_quest_insurance_complite} sr_idle@6

[sr_idle@6]
on_game_timer = 1500 | sr_idle@6_1

[sr_idle@6_1]
on_info = {!zat_b7_is_night !surge_started =dist_to_actor_ge(25)} sr_idle@scenario_autosave3 %+esc_wolf_quest_hunting_dialog_open =esc_sms_wolf_quest_talk_wolf_work =give_task(esc_quest_talk_wolf_work)%

[sr_idle@scenario_autosave3]
on_timer = 100 | {-save_esc_quest_hunting} %+save_esc_quest_hunting =scenario_autosave(st_save_esc_quest_hunting)%
on_info = {+save_esc_quest_hunting} sr_idle@7

[sr_idle@7]
on_info = {+esc_quest_hunting_complite} sr_idle@8
on_info2 = {+esc_npc_wood_goblin_dead} sr_idle@8
on_info3 = {+esc_quest_hunting_reversed} sr_idle@8

[sr_idle@8]
on_game_timer = 1500 | sr_idle@9 

[sr_idle@9]
on_actor_not_in_zone = level_escape_space_restrictor_derevnya_novickov_all | sr_idle@scenario_autosave4 %+esc_wolf_quest_conductor_open =esc_sms_wolf_quest_conductor =give_task(esc_quest_wolf_work_conductor) =spawn_object(esc_npc_student:esc_npc_student_spawn)%

[sr_idle@scenario_autosave4]
on_timer = 100 | {-save_esc_quest_wolf_work_conductor} %+save_esc_quest_wolf_work_conductor =scenario_autosave(st_save_esc_quest_wolf_work_conductor)%
on_info = {+save_esc_quest_wolf_work_conductor} sr_idle@nil

[sr_idle@nil]