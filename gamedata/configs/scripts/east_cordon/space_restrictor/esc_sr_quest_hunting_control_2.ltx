[logic]
active = sr_idle

[sr_idle]
on_info = {+esc_quest_hunting_complite} sr_idle@sms %+esc_quest_hunting_info%
on_info2 = {+esc_npc_wood_goblin_dead} sr_idle@sms %+esc_quest_hunting_info%
on_info3 = {+esc_quest_hunting_reversed} sr_idle@sms %+esc_quest_hunting_info%

[sr_idle@sms]
