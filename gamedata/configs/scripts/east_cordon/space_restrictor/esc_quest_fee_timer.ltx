active = sr_idle

[sr_idle]
on_info = {+spectrum_project_start -esc_colonel_kolyazin_quest_fee_and +esc_quest_fee_info} sr_idle@24hours_1

[sr_idle@24hours_1]
on_game_timer = 86400 | sr_idle@1

[sr_idle@1]
on_info = {-esc_colonel_kolyazin_quest_fee_and} sr_idle@24hours_2 %=esc_quest_fee_sms_1%

[sr_idle@24hours_2]
on_game_timer = 86400 | sr_idle@2

[sr_idle@2]
on_info = {-esc_colonel_kolyazin_quest_fee_and} sr_idle@12hours %=esc_quest_fee_sms_2%

[sr_idle@12hours]
on_game_timer = 43200 | sr_idle@fail

[sr_idle@fail]
on_info = {-esc_colonel_kolyazin_quest_fee_and} sr_idle@nil %=esc_quest_fee_sms_3 +esc_quest_fee_fail%

[sr_idle@nil]