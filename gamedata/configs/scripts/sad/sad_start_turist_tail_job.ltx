[walker@def]
meet = meet
use_camp = false
combat_ignore_cond = {=is_enemy_actor} true, {=turist_combat_check} true, false
gather_items_enabled = false
help_wounded_enabled = false
corpse_detection_enabled = false
on_info8 = {-sad_turist_visit_some_place =dist_to_actor_ge(120)} remark@killed_by_mob %=create_mob_near_npc(bloodsucker_normal:snork_normal:borya_normal:chimera_normal)%
