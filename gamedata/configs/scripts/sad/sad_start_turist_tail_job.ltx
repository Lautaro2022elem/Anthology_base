hp_cover		= 0|false

[death]
on_info = %+turist_ignore_default%

[hit]
on_info = %+turist_ignore_default%

[logic@def]
suitable = {=target_squad_name(sad_turist_squad) +sad_turist_task_active -sad_turist_visit_some_place} true
post_combat_time = 0, 0
on_death = death
on_hit = hit
level_spot = turist
prior = 280

[meet]
snd_on_use 		= {=has_enemy} meet_use_no_fight, nil
close_snd_hello = nil
close_snd_bye   = nil
close_distance  = 0
close_victim    = actor
close_anim 		= nil
far_anim 		= nil
far_victim 		= nil
far_distance 	= 0
far_snd 		= nil
abuse 			= false
meet_on_talking = false
use 			= {=actor_enemy} false, {=has_enemy} false, {=dist_to_actor_le(3)} true, false
trade_enable	= false

