[logic]
active = ph_door@closed

[ph_door@closed]
closed = true
locked = false
on_use = ph_door@open
on_info = {+sad_b2_jail_door_force_lock} ph_door@locked
on_info2 = {+sad_b2_jail_door_force_open} ph_door@open %-sad_b2_jail_door_force_lock -sad_b2_jail_door_force_open%
;on_info2 = {!is_door_blocked_by_npc} ph_door@open 
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop

[ph_door@open]
closed = false
locked = false
on_use = {-sad_b2_jail_door_force_open} ph_door@closed
on_info = {+sad_b2_jail_door_force_lock} ph_door@locked %-sad_b2_jail_door_force_open%
;on_info2 = {!is_door_blocked_by_npc} ph_door@closed
;on_game_timer = 35 | {!is_door_blocked_by_npc} ph_door@closed
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop

[ph_door@locked]
closed = true
locked = true
on_info = {-sad_b2_jail_door_force_lock} ph_door@closed
on_info2 = {+sad_b2_jail_door_force_open} ph_door@open %-sad_b2_jail_door_force_lock -sad_b2_jail_door_force_open%
snd_open_start = trader_door_locked
;tip_open = tip_door_closed_hide_weapon
