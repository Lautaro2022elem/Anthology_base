[logic]
active = ph_door@locked

[ph_door@closed]
closed = true
locked = false
on_use = ph_door@open
on_info = {-sad_b1_unlock_trader_door} ph_door@locked
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop

[ph_door@open]
closed = false
locked = false
on_use = ph_door@closed
on_info = {-sad_b1_unlock_trader_door} ph_door@locked
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop

[ph_door@locked]
closed = true
locked = true
on_info = {+sad_b1_unlock_trader_door} ph_door@open
snd_open_start = trader_door_locked