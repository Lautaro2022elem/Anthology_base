[logic]
active = ph_door@locked

[ph_door@closed]
closed = true
locked = false
on_use = ph_door@open
on_info = {+sad_atr_enter_door_locked} ph_door@locked
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop

[ph_door@open]
closed = false
locked = false
on_use = ph_door@closed
on_info = {+sad_atr_enter_door_locked} ph_door@locked
on_info2 = {=dist_to_actor_ge(3)} ph_door@closed
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop

[ph_door@locked]
closed = true
locked = true
on_info = {-sad_atr_enter_door_locked} ph_door@closed
snd_open_start = trader_door_locked