[logic]
active = ph_door@closed

[ph_door@closed]
closed = true
locked = false
on_use = ph_door@open %+sad_b1_main_door_open%
on_info = {+sad_mutny_b1_accuped} ph_door@closed_1, {+sad_actor_mutny_enemy} ph_door@locked_until_accuped
on_info2 = {+sad_b1_door_weapon_check} ph_door@locked
on_info3 = {+sad_b1_main_door_open !is_door_blocked_by_npc} ph_door@open 
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop

[ph_door@open]
closed = false
locked = false
on_use = ph_door@closed %-sad_b1_main_door_open%
on_info = {+sad_b1_door_weapon_check} ph_door@locked %-sad_b1_main_door_open%
on_info2 = {-sad_b1_main_door_open !is_door_blocked_by_npc} ph_door@closed
on_game_timer = 35 | {!is_door_blocked_by_npc} ph_door@closed %-sad_b1_main_door_open%
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop

[ph_door@locked]
closed = true
locked = true
on_info = {+sad_mutny_b1_accuped} ph_door@closed_1, {+sad_actor_mutny_enemy} ph_door@locked_until_accuped
on_info2 = {-sad_b1_door_weapon_check} ph_door@closed
snd_open_start = trader_door_locked
tip_open = tip_door_closed_hide_weapon

[ph_door@locked_until_accuped]
closed = true
locked = true
on_info = {+sad_mutny_b1_accuped} ph_door@closed_1
snd_open_start = trader_door_locked
tip_open = tip_door_closed_base_alarm

; ------------------------------------------------------------------------------ no weapon check (after sabotage)

[ph_door@closed_1]
closed = true
locked = false
on_use = ph_door@open_1 %+sad_b1_main_door_open%
on_info3 = {+sad_b1_main_door_open !is_door_blocked_by_npc} ph_door@open_1 
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop

[ph_door@open_1]
closed = false
locked = false
on_use = ph_door@closed_1 %-sad_b1_main_door_open%
on_info2 = {-sad_b1_main_door_open !is_door_blocked_by_npc} ph_door@closed_1
on_game_timer = 35 | {!is_door_blocked_by_npc} ph_door@closed_1 %-sad_b1_main_door_open%
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop