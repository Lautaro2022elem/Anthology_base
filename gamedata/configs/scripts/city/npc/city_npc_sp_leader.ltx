[logic]
active = remark
on_death = death

[death]
on_info = %+city_npc_sp_leader_death%


[remark]
anim = hands_up
target = story | actor
meet = meet@dialog
invulnerable = true
gather_items_enabled = false
corpse_detection_enabled = false
combat_ignore_keep_when_attacked = true 
combat_ignore_cond = true
on_info = {+city_npc_sp_leader_dialog_info} remark@2

[remark@2]
anim = wait
target = story | actor
meet = no_meet
gather_items_enabled = false
corpse_detection_enabled = false
combat_ignore_keep_when_attacked = true 
combat_ignore_cond = true
on_info = {+city_npc_sp_leader_release} %=release_npc%


[meet@dialog]
abuse           = false
close_anim 		= nil
far_anim 		= nil
far_victim 		= nil
close_distance  = 0
far_distance 	= 0
close_victim = actor
use = {=dist_to_actor_le(2) -city_npc_sp_leader_dialog_info} self, true
allow_break = false
meet_dialog = city_npc_sp_leader_dialog
trade_enable = false