[logic]
active = remark@claim

[remark@claim]
anim = claim
target = story | actor
meet = meet@dialog
invulnerable = true
gather_items_enabled = false
corpse_detection_enabled = false
combat_ignore_keep_when_attacked = true 
combat_ignore_cond = true
on_info = {=dist_to_actor_le(2)} remark@dialog_actor
on_info2 = {+city_army_start_gg_kill} remark@enemy %=actor_enemy%
show_spot = {=dist_to_actor_le(3)} true, false


[remark@dialog_actor]
anim = threat
target = story | actor
meet = meet@dialog
invulnerable = true
gather_items_enabled = false
corpse_detection_enabled = false
combat_ignore_keep_when_attacked = true 
combat_ignore_cond = true
on_info2 = {+city_army_start_gg_kill} remark@enemy %=actor_enemy%
on_info3 = {+city_army_start_remove} %=release_npc%



[remark@enemy]
anim = threat_fire
target = story | actor
combat_ignore_cond = true 
combat_ignore_keep_when_attacked = true 
invulnerable = true
meet = no_meet

[meet@dialog]
abuse           = false
close_anim 		= nil
far_anim 		= nil
far_victim 		= nil
close_distance  = 0
far_distance 	= 0
close_victim = actor
use = {=dist_to_actor_le(2) -city_npc_army_kep_start_dialog_info} self, true
allow_break = false
meet_dialog = city_npc_army_kep_start_dialog
trade_enable = false

