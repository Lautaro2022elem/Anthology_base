[logic]
active = walker@baza

[walker@baza]
path_walk = gar_a2_main_quest_dolg_4_start_walk
path_look = gar_a2_main_quest_dolg_4_start_look
on_info = {+gar_a2_bagretcev_quest_dialog_info} remark@dialog_actor
on_info2 = {+gar_dolg_general_kill} remark@enemy %=actor_enemy%
on_info3 = {-gar_guard_1_sound_info =dist_to_actor_le(4)} %+gar_guard_1_sound_info =play_s3d_sound(characters_voice\scenario\garbage\guard_1)%
