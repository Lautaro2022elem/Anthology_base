meet = no_meet


[remark@dialog_actor]
anim = wait
target = story | actor
meet = meet@dialog
invulnerable = true
gather_items_enabled = false
corpse_detection_enabled = false
combat_ignore_keep_when_attacked = true 
combat_ignore_cond = true
on_info2 = {+gar_a2_main_quest_borland_release} %=release_npc%



[remark@enemy]
anim = threat_fire
target = story | actor
combat_ignore_cond = true 
combat_ignore_keep_when_attacked = true 
invulnerable = true



[meet@dialog]
abuse           = false
close_anim 		= nil
far_anim 		= nil
far_victim 		= nil
close_distance  = 0
far_distance 	= 0
close_victim = actor
use = {=dist_to_actor_le(2) -gar_a2_dolg_guard_dialog_info} self, true
allow_break = false
meet_dialog = gar_a2_dolg_guard_dialog
trade_enable = false