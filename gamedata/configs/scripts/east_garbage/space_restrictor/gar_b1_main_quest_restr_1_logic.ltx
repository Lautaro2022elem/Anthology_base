[logic]
active = sr_idle@start

[sr_idle@start]
on_game_timer = 100 | {+spectrum_project_start +sp_a2_hero_to_garbage_come +gar_mod_npcs_spawner -gar_a2_main_quest_1_give} %+gar_a2_main_quest_1_give%
on_info2 = {+gar_a2_borland_talking_1 -gar_a2_spawn_dead_body_1} %=spawn_corpse(gar_a2_digger:gar_a2_digger_body_walk) +gar_a2_spawn_dead_body_1%
on_info3 = {+gar_a2_spawn_dead_body_1 -gar_a2_first_timer_begin} sr_timer@first %+gar_a2_first_timer_begin%

[sr_timer@first]
type = dec
string = "Найти тайник"
start_value = 300000
on_value = 0 | sr_idle@nil %=kill_actor +gar_a2_first_timer_end%
on_info = {+gar_a2_gg_eat_lekarstvo_items -gar_a2_sp_killer_zas_create} sr_idle@wait_0 %=gar_a2_create_zas_killer +gar_a2_sp_killer_zas_create%
on_game_timer = 10000 | {-gar_a6_main_quest_igra_effect_1_take} %=gar_a6_main_quest_igra_effect_1 +gar_a6_main_quest_igra_effect_1_take%
on_game_timer2 = 10000 | {-gar_a6_main_quest_igra_effect_2_take} %=gar_a6_main_quest_igra_effect_2 +gar_a6_main_quest_igra_effect_2_take%
on_game_timer3 = 10000 | {-gar_a6_main_quest_igra_effect_3_take} %=gar_a6_main_quest_igra_effect_3 +gar_a6_main_quest_igra_effect_3_take%
on_game_timer4 = 10000 | {-gar_a6_main_quest_igra_effect_4_take} %=gar_a6_main_quest_igra_effect_4% 

[sr_idle@wait_0]
on_info = {+gar_a2_gg_have_all_items} sr_idle@wait

[sr_idle@wait]
on_info = {+gar_a2_sp_borland_spasenie} sr_timer@second %+gar_a2_second_timer_begin%

[sr_timer@second]
type = dec
string = "Спасти Борланда"
start_value = 300000
on_value = 0 | sr_idle@nil %=kill_actor +gar_a2_second_timer_end%
on_info = {+gar_a2_borland_quest_dialog_info} sr_idle@wait_2

[sr_idle@wait_2]
on_info = {+gar_a2_borland_talking_2 -gar_a2_third_timer_begin} sr_idle@nil %+gar_a2_third_timer_begin%

[sr_idle@nil]