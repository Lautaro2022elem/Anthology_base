[logic]
active = sr_idle@memmmory_atp

[sr_idle@memmmory_atp]
on_info = {+esc_raven_talk_end -meet_dialog_stalker_to_atp_done} sr_idle@memmmory_atp_start %=CutSceneAtpStart =run_postprocess(black:2525:true) +esc_scene_atp_start%

