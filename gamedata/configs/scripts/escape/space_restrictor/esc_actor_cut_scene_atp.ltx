on_timer = 4000 | sr_idle@memmmory_atp_start_2 %=teleport_actor(esc_actor_cut_scene_atp_walk:esc_actor_cut_scene_atp_look) =esc_activate_weapon(wpn_ak74m_camo)%

[sr_idle@memmmory_atp_start_2]
on_timer = 300 | sr_idle@memmmory_atp_start_3 %=stop_postprocess(2525)%

[sr_idle@memmmory_atp_start_3]
on_timer = 1500 | sr_idle@memmmory_atp_start_4 %=show_chapter(chapter_2)%

[sr_idle@memmmory_atp_start_4]
