[sr_idle@memmmory_atp_start_6]
on_timer = 7200 | sr_idle@memmmory_atp_start_7 %=enable_ui +esc_dialog_quest_line_atp_meet%

[sr_idle@memmmory_atp_start_7]
on_info = {+esc_leader_group_stalker_to_atp_dead +esc_squad_stalker_to_atp_dead} sr_idle@memmmory_atp_start_8

[sr_idle@memmmory_atp_start_8]
on_timer = 2000 | sr_idle@memmmory_atp_start_9 %=esc_dop_action_first_quest +esc_dop_action_first_give_info%

[sr_idle@memmmory_atp_start_9]
on_info = {+esc_dop_action_first_give_info +esc_dop_action_first_complete} sr_idle@memmmory_atp_start_10 %=esc_dop_action_first_complete%

[sr_idle@memmmory_atp_start_10]
on_info = {+esc_qrif_quest_bar_sms_final} sr_idle@nil %=create_squad(esc_merc_bar_security_squad:esc_smart_terrain_1_1_bar_92)%

