[logic]
active = sr_idle

[sr_idle]
on_actor_inside = {+esc_zver_go_to_wolf} sr_idle@quest %+esc_come_to_base_complite%

[sr_idle@quest]
on_timer = 1500 | sr_idle@quest_1 %=esc_wolf_send_new_quest_sms =remove_npc(esc_stalker_to_atp) =remove_npc(esc_stalker_to_atp_1) =remove_npc(esc_stalker_to_atp_2)%

[sr_idle@quest_1]
on_timer = 4000 | sr_idle@scenario_autosave %+esc_give_quest_to_speak_wolf%

[sr_idle@scenario_autosave]
on_timer = 1000 | sr_idle@scenario_autosave_1

[sr_idle@scenario_autosave_1]
on_info = {+esc_give_quest_to_speak_wolf -esc_st_esc_come_to_base_save_complete} sr_idle@actor_inside_or_outside %+esc_st_esc_come_to_base_save_complete =scenario_autosave(st_esc_come_to_base)%

[sr_idle@actor_inside_or_outside]
on_actor_inside = {+esc_actor_talk_from_grif_about_bar_security} %+esc_actor_come_to_vilage_complite -esc_actor_come_from_vilage_complite%
on_actor_outside = {+esc_actor_talk_from_grif_about_bar_security} %+esc_actor_come_from_vilage_complite -esc_actor_come_to_vilage_complite%

[sr_idle@nil]