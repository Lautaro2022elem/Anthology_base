[sr_idle@group_in_vagon_enemy_dead_check_1]
on_timer = 4000 | sr_idle@group_in_vagon_enemy_dead_check_2 %=esc_group_in_vagon_enemy_dead_1%

[sr_idle@group_in_vagon_enemy_dead_check_2]
