[logic]
active = ph_door@locked

[ph_door@locked]
closed = true
locked = true
snd_open_start = power_switch
tip_open = tip_door_locked
on_info = {+esc_koordinator_to_sklad_dialog_done} ph_door@locked_tech

[ph_door@locked_tech]
closed = true
locked = true
snd_open_start = power_switch
tip_open = esc_tip_door_locked_tech
on_info = {+esc_wait_action_of_enot_drink} ph_door@closed

[ph_door@closed]
closed = true
locked = false
on_use = ph_door@open
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop

[ph_door@open]
closed = false
locked = false
on_use = ph_door@closed
on_game_timer = 50 | ph_door@closed
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
