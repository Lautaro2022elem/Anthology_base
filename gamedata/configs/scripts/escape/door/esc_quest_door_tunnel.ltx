[logic]
active = ph_door@closed

[ph_door@closed]
closed = true
locked = false
on_use = ph_door@open
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop

[ph_door@open]
closed = false
locked = false
on_use = ph_door@closed
on_game_timer = 80 | ph_door@closed
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_info = {+esc_watchmaker_key_door_open} ph_door@locked

;--------------------------------------------------------------
[ph_door@locked]
closed = true
locked = true
snd_open_start = power_switch
tip_open = esc_locked_chasovshik_door