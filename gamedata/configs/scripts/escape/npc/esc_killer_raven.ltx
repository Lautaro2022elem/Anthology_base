;=========meet_stalker_korpys========
[meet@korpys_stalker]
close_anim 		= nil
close_victim 	= nil
far_anim 		= nil
far_victim 		= nil
close_distance 	= 0
far_distance 	= 0
use = {=actor_enemy} false, {=dist_to_actor_le(3)} true, false
snd_on_use = {!dist_to_actor_le(3)} nil
meet_on_talking = false
;==================================

[logic]
active = remark@stay
suitable = {=check_npc_name(esc_killer_raven)} true, false
level_spot = quest_npc
prior = 250

[remark@stay]
anim = wait_na
target = story | actor
on_info = {+esc_raven_dialog_quest_line_start} remark@dialog_start
combat_ignore_cond = true
combat_ignore_keep_when_attacked = true
invulnerable = false
gather_items_enabled = false
help_wounded_enabled = false
corpse_detection_enabled = false
meet = no_meet

[remark@dialog_start]
anim = wait_na
target = story | actor
on_info = {+esc_killer_say_dont_move} %=release_npc%
combat_ignore_cond = true
combat_ignore_keep_when_attacked = true
invulnerable = false
gather_items_enabled = false
help_wounded_enabled = false
corpse_detection_enabled = false
meet = meet@esc_start_memmory

[meet@esc_start_memmory]:meet@korpys_stalker
close_victim = actor
use = {!actor_enemy =dist_to_actor_le(6) -esc_raven_talk_end} self, true
allow_break = false
meet_dialog = esc_actor_start_memmory
trade_enable = false