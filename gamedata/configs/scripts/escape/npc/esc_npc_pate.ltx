[logic] ;ֿארעוע
active = remark@wait
on_death = death
post_combat_time = 0, 0
on_hit = hit

[remark@wait]
anim = guard
target = story | actor
meet = no_meet
danger = danger
gather_items_enabled = false
combat_ignore_cond = true
gather_items_enabled = false
corpse_detection_enabled = false
on_info = {=dist_to_actor_le(2)} remark@dialog_actor

[remark@dialog_actor]
anim = wait_na
target = story | actor
meet = meet@dialog
on_info = {+esc_quest_serious_business_npc_pate_enemy} %=actor_enemy%
on_info2 = {+esc_serious_business_complite} %=release_npc%
on_info3 = {+esc_serious_business_fail} %=release_npc%

[meet@dialog]
abuse           = false
close_anim 		= nil
far_anim 		= nil
far_victim 		= nil
close_distance  = 0
far_distance 	= 0
close_victim = actor
use = {!actor_enemy =dist_to_actor_le(2) -esc_quest_serious_business_npc_pate_dialog_and} self, true
allow_break = false
meet_dialog = esc_quest_serious_business_npc_pate_dialog
trade_enable = false

[smart_terrains]
none = true

[death]
on_info = %+esc_npc_pate_dead =set_squad_enemy_to_actor(esc_squad_kpp_quest)%

[hit]
on_info = %+esc_npc_pate_hit =actor_enemy =set_squad_enemy_to_actor(esc_squad_kpp_quest)%