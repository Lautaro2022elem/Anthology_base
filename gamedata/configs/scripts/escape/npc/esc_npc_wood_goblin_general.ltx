gather_items_enabled = false
corpse_detection_enabled = false

[remark@hunter_4_meet]
anim = wait_na
target = story | actor
meet = meet@dialog_2
on_info = {+esc_talk_from_hunter_complete} walker@go_yantar
gather_items_enabled = false
corpse_detection_enabled = false

[walker@go_yantar]
