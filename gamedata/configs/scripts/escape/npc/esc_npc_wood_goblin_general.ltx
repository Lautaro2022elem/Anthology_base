on_info = {=dist_to_actor_ge(140)} %=release_npc%
meet = no_meet
def_state_moving = run
gather_items_enabled = false
corpse_detection_enabled = false

[meet@dialog]:meet
use = {!actor_enemy =dist_to_actor_le(6)} self, true
meet_dialog = esc_actor_talk_from_hunter

[meet@dialog_2]:meet@korpys_stalker
