[remark@hunter_3]
anim = wait_na
target = story | actor
meet = no_meet
on_info = {+esc_psy_dog_quest_dead} remark@hunter_3_meet
invulnerable = true
gather_items_enabled = false
corpse_detection_enabled = false

[remark@hunter_3_meet]
anim = wait_na
target = story | actor
meet = no_meet
on_info = {=actor_has_item(esc_flash_klim)} remark@hunter_4_meet
