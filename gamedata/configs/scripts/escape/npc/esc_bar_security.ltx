[logic@esc_squad_bar_security]
active = camper@start
suitable = {=check_npc_name(esc_bar_security)} true, false
can_select_weapon = true
prior = 300

[camper@start]
path_walk = security_walk
path_look = security_look
on_info = {=dist_to_actor_le(3) -esc_koordinator_stop_sound -esc_killer_grif_meet_quest_sidor_end} %=play_sound(esc_koordinator_first_meet) +esc_koordinator_stop_sound%
on_info2 = {+esc_killer_grif_meet_quest_sidor_end -esc_koordinator_syndikate_quest_done} camper@quest %=teleport_npc(esc_smart_terrain_1_1_bar_92_koordinator_walk)%
gather_items_enabled = false
corpse_detection_enabled = false
combat_ignore_keep_when_attacked = true 
combat_ignore_cond = true
invulnerable = true
meet = meet@after
use_camp = false

[camper@quest]
path_walk = koordinator_walk
path_look = koordinator_look
on_info = {+esc_koordinator_syndikate_quest_done} camper@start
gather_items_enabled = false
corpse_detection_enabled = false
combat_ignore_keep_when_attacked = true 
combat_ignore_cond = true
invulnerable = true
meet = meet@quest_start
use_camp = false

[meet@after]
close_anim 		= nil
close_victim 	= nil
far_anim 		= nil
far_victim 		= nil
close_distance 	= 0
far_distance 	= 0
use = {+esc_koordinator_syndikate_quest_done} true, false
meet_dialog = {+esc_killer_grif_meet_quest_sidor_end -esc_koordinator_syndikate_quest_done} esc_actor_meet_from_koordinator
trade_enable = false
allow_break 	= false

[meet@quest_start]
close_snd_hello = esc_koordinator_final_meet
close_snd_bye 	= esc_koordinator_final_meet_bye
close_snd_distance = 3
close_anim 		= nil
close_victim 	= nil
far_anim 		= nil
far_victim 		= nil
close_distance 	= 0
far_distance 	= 0
use = {!actor_enemy =dist_to_actor_le(4) -esc_koordinator_to_sklad_dialog_done} self, true
meet_dialog = {+esc_killer_grif_meet_quest_sidor_end -esc_koordinator_syndikate_quest_done} esc_actor_meet_from_koordinator
trade_enable = false
allow_break 	= false