[logic]
active = walker@wait

[walker@wait]
path_walk = esc_trader_walker_walk
path_look = esc_trader_walker_look
combat_ignore_cond = true
combat_ignore_keep_when_attacked = true
invulnerable = true
gather_items_enabled = false
help_wounded_enabled = false
corpse_detection_enabled = false
show_spot = false 
def_state_standing = search_corpse
on_info = {=dist_to_actor_le(6)} remark@claim %+esc_quest_line_research_underground_sidor%
meet = no_meet

[remark@claim]
anim = backoff2
target = story | actor
meet = no_meet
on_info = {=dist_to_actor_le(2)} remark@dialog_actor %=play_sound(esc_trader_und_hi)%
combat_ignore_cond = true
combat_ignore_keep_when_attacked = true
invulnerable = true
gather_items_enabled = false
help_wounded_enabled = false
corpse_detection_enabled = false

[remark@dialog_actor]
anim = fold_arms
target = story | actor
meet = meet@dialog
on_info = {+esc_quest_line_research_underground_lab} remark@release %=play_sound(esc_trader_und_bye)%
combat_ignore_cond = true
combat_ignore_keep_when_attacked = true
invulnerable = true
gather_items_enabled = false
help_wounded_enabled = false
corpse_detection_enabled = false

[remark@release]
anim = fold_arms
target = story | actor
meet = no_meet
on_info = {+esc_quest_line_research_underground_lab =dist_to_actor_ge(25)} %=release_npc%
combat_ignore_cond = true
combat_ignore_keep_when_attacked = true
invulnerable = true
gather_items_enabled = false
help_wounded_enabled = false
corpse_detection_enabled = false

[meet@dialog]
abuse           = false
close_anim 		= nil
far_anim 		= nil
far_victim 		= nil
close_distance  = 0
far_distance 	= 0
close_victim = actor
use = {=dist_to_actor_le(2)} self, true
allow_break = false
meet_dialog = esc_sidor_quest_line_research_underground_dialog
trade_enable = false

[smart_terrains]
none = true