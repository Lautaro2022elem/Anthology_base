;=========meet_stalker_korpys========
[meet@korpys_stalker]
close_anim 		= nil
close_victim 	= nil
far_anim 		= nil
far_victim 		= nil
close_distance 	= 0
far_distance 	= 0
use = {=actor_enemy} false, {=dist_to_actor_le(3)} true, false
snd_on_use = {!dist_to_actor_le(3)} nil
meet_on_talking = false
;==================================

[logic]
suitable = {=check_npc_name(labx7_killer_tesak)} true
prior = 200
level_spot = quest_npc
active = remark@stay_start
on_death = death

[remark@stay_start]
anim = threat_na
target = story | actor
on_info = {+labx7_killer_tesak_dialog_done} %=actor_enemy%
use_camp = false
invulnerable = false
gather_items_enabled = false
help_wounded_enabled = false
corpse_detection_enabled = false
meet = meet@end_game

[meet@end_game]:meet@korpys_stalker
close_victim = actor
use = {!actor_enemy +labx7_killer_tesak_dialog_give -labx7_killer_tesak_dialog_done} self, true
allow_break = false
meet_dialog = labx7_killer_tesak_dialog
trade_enable = false

[death]
on_info = %+labx7_killer_tesak_dead_end_game%