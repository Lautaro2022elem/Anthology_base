;=========meet_stalker_korpys========
[meet@korpys_stalker]
close_anim 		= nil
close_victim 	= nil
far_anim 		= nil
far_victim 		= nil
close_distance 	= 0
far_distance 	= 0
use = {=actor_enemy} false, {=dist_to_actor_le(3)} true, false
snd_on_use = {!dist_to_actor_le(3)} nil
meet_on_talking = false
;==================================

[logic]
suitable = {=check_npc_name(labx7_stronglav_scary)} true
prior = 200
active = remark@wait_actor
on_hit = hit@stronglav_lab

[remark@wait_actor]
anim = wait_na
target = path | labx7_stronglav_scary_look, 0
on_info = {+labx7_actor_go_to_stronglav} camper@scary_actor
combat_ignore_cond = true
combat_ignore_keep_when_attacked = true
invulnerable = true
gather_items_enabled = false
help_wounded_enabled = false
corpse_detection_enabled = false
use_camp = false

[camper@scary_actor]
path_walk = labx7_stronglav_scary_walk
path_look = labx7_stronglav_scary_look
on_info = {+labx7_actor_hit_stronglav_lab} %=release_npc%
on_info2 = {=dist_to_actor_le(5)} %=release_npc%
meet = no_meet
gather_items_enabled = true
corpse_detection_enabled = true
combat_ignore_keep_when_attacked = true
combat_ignore_cond = true
invulnerable = true

[hit@stronglav_lab]
on_info = {=hit_by_actor +labx7_actor_go_to_stronglav -labx7_actor_hit_stronglav_lab} %+labx7_actor_hit_stronglav_lab%