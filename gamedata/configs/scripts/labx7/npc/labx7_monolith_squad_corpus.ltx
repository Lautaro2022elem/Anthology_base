[logic@labx7_monolith_squad_corpus_1]
active = walker@monolith_1
prior = 50
suitable = {=check_npc_name(sim_default_monolith_2)} true, false

[walker@monolith_1]
path_walk = walker_1_walk
path_look = walker_1_look
on_info = {+labx7_actor_go_to_stronglav} remark@monolith_1
combat_ignore_cond = {+labx7_door_corpus_open} false, true
meet = no_meet

[remark@monolith_1]
anim = guard_na
target = story | actor
combat_ignore_cond = {+labx7_door_corpus_open} false, true
meet = no_meet

