;=========meet_stalker_korpys========
[meet@korpys_stalker]
close_anim 		= nil
close_victim 	= nil
far_anim 		= nil
far_victim 		= nil
close_distance 	= 0
far_distance 	= 0
use = {=actor_enemy} false, {=dist_to_actor_le(3)} true, false
snd_on_use = {!dist_to_actor_le(3)} nil
meet_on_talking = false
;==================================

[logic]
suitable = {=check_npc_name(labx7_ghost_first)} true
prior = 200
active = remark@target_actor
on_hit = hit@ghost_first

[remark@target_actor]
anim = wait_na
target = story | actor
on_info = {=dist_to_actor_le(5) -labx7_ghost_first_talk_sound_stop} %=play_sound(labx7_ghost_talk_about_stronglav_1) +labx7_ghost_first_talk_sound_stop%
on_info2 = {+labx7_actor_hit_ghost_first} %=release_npc%
combat_ignore_cond = true
combat_ignore_keep_when_attacked = true
invulnerable = true
gather_items_enabled = false
help_wounded_enabled = false
corpse_detection_enabled = false
use_camp = false

[hit@ghost_first]
on_info = {=hit_by_actor +labx7_actor_go_to_stronglav -labx7_actor_hit_ghost_first} %+labx7_actor_hit_ghost_first%