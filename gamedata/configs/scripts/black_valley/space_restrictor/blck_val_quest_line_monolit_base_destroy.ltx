active = sr_idle@monolith_leader_spawn

[sr_idle@monolith_leader_spawn]
on_info = {+blck_val_lutiy_monolit_dialog_done} sr_idle@teleport_actor %=RavenMemmoryStart =run_postprocess(black:2525:true) =spawn_object(blck_val_monolith_leader:blck_val_monolith_leader_on_base_walk)%

[sr_idle@teleport_actor]
on_timer = 2000 | sr_idle@stop_postprocess %=teleport_actor(actor_monolith_base_teleport_walk:actor_monolith_base_teleport_look) =spawn_object(blck_val_lutiy_monolith:blck_val_lutiy_monolith_spawn)%

[sr_idle@stop_postprocess]
on_timer = 2000 | sr_idle@enable_ui %=stop_postprocess(2525)%

[sr_idle@enable_ui]
