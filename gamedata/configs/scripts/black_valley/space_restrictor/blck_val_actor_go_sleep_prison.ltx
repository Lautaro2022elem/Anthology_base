[logic]
active = sr_idle@actor_go_sleep

[sr_idle@actor_go_sleep]
on_info = {+blck_val_actor_sleep_to_prison} sr_idle@actor_go_sleep_1 %=RavenMemmoryStart =run_postprocess(black:2525:true)%

[sr_idle@actor_go_sleep_1]
on_timer = 4500 | sr_idle@actor_go_sleep_2 %=set_game_time(07:04) +blck_val_actor_sleep_to_prison_done%

[sr_idle@actor_go_sleep_2]
on_timer = 2000 | sr_idle@wake_up_1 %=stop_postprocess(2525) =spawn_object(blck_val_stalker_security:blck_val_lutiy_scene_spawn)%

