[sr_idle@enable_ui]
on_timer = 100 | sr_idle@actor_talk_levsha %=enable_ui +blck_val_cut_scene_first_complete%

[sr_idle@actor_talk_levsha]
on_info = {+blck_val_actor_from_levsha_replic} sr_idle@actor_talk_anomaly %=blck_val_actor_replic_about_levsha%

[sr_idle@actor_talk_anomaly]
