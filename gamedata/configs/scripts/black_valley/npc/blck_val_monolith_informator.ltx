;=========meet_quest_line========
[meet@quest_line]
close_anim 		= nil
close_victim 	= nil
far_anim 		= nil
far_victim 		= nil
close_distance 	= 0
far_distance 	= 0
use = {=actor_enemy} false, {=dist_to_actor_le(3)} true, false
snd_on_use = {!dist_to_actor_le(3)} nil
meet_on_talking = false
;==================================

[logic]
active = remark@blck_val_monolith_informator
post_combat_time = 0, 0
suitable = {=check_npc_name(blck_val_monolith_informator)} true, false
level_spot = quest_npc
prior = 250

[remark@blck_val_monolith_informator]
anim = ward
target = path | blck_val_monolith_information_look, 0
combat_ignore_cond = true
combat_ignore_keep_when_attacked = true
invulnerable = false
gather_items_enabled = false
help_wounded_enabled = false
corpse_detection_enabled = false
meet = meet@start_quest

[meet@start_quest]:meet@quest_line
close_victim = actor
use = {+blck_val_monolith_informator_dialog_done} false, {=dist_to_actor_le(6) +blck_val_monolith_informator_dialog -blck_val_monolith_informator_dialog_done} self, false
allow_break = false
meet_dialog = blck_val_actor_meet_from_monolit_scene
trade_enable = false