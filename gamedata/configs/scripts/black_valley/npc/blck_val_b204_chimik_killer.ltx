[logic@blck_val_b204_chimik_killer]
active = remark@chimik_search_knife
suitable = {=check_npc_name(blck_val_chimik_killer)} true
prior = 250
can_use_knife = false

[remark@chimik_search_knife]
anim = search
target = path | blck_val_chimik_killer_look, 0
on_info = {=dist_to_actor_le(5)} remark@chimik_meet_to_actor
invulnerable = false
meet = no_meet

[remark@chimik_meet_to_actor]
anim = threat_na
target = story | actor
on_info = {+blck_val_stalker_chimik_is_enemy} %=actor_enemy%
invulnerable = false
meet = meet@start_quest

[meet@start_quest]
close_victim = actor
far_anim 		= nil
far_victim 		= nil
close_distance 	= 0
far_distance 	= 0
use = {!actor_enemy =dist_to_actor_le(6) -blck_val_stalker_chimik_is_enemy} self, true
allow_break = false
meet_dialog = blck_val_chimik_killer_meet
trade_enable = false