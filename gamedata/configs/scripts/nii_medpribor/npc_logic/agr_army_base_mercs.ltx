[walker@gen]
meet = no_meet
combat_ignore_cond = true
combat_ignore_keep_when_attacked = true
invulnerable = true
gather_items_enabled = false
help_wounded_enabled = false
corpse_detection_enabled = false
def_state_moving1 = rush
def_state_moving2 = rush
def_state_moving3 = rush

;------------------------------------------------------------
[logic@leader]
active = walker@leader_1
suitable = {=check_npc_name(sim_default)}
prior = 200

[walker@leader_1]:walker@gen
path_walk = merc_leader_walk_1
path_look = merc_leader_look_1
def_state_standing = fold_arms
on_info = {~10 !surge_started} walker@leader_2

[walker@leader_2]:walker@gen
path_walk = merc_leader_walk_2
path_look = merc_leader_look_2
def_state_standing = guard
on_game_timer = 1000 | walker@leader_1
on_info = {=surge_started} walker@leader_1

