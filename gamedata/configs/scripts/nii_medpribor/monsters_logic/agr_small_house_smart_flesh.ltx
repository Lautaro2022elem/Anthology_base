[logic@flesh]
active = mob_walker@idle
suitable = {=target_squad_name(agr_smart_flesh_squad)} true
monster_job = true
prior = 200

[mob_walker@idle]
path_walk = flesh_walk
path_look = flesh_look
combat_ignore_cond = {+agr_small_house_window_covers_hit} false, {=see_actor} false, true
on_info = {+agr_small_house_windows_cover_hit} mob_walker@aggressive 
on_info2 = {=see_actor} mob_walker@aggressive
on_info3 = {=dist_to_actor_le(7)} %=play_sound(agr_smart_flesh_help)%
on_info4 = {+agr_small_house_door_open} mob_walker@aggressive
on_sound  = actor|WPN_shoot|3|0.9| mob_walker@aggressive ;Услышит все, кроме пистолета с глушителем

[mob_walker@aggressive]
path_walk = flesh_walk
path_look = flesh_look
on_info = {=health_le(0.7) -agr_smart_flesh_runaway} %+agr_smart_flesh_runaway =restore_health%
