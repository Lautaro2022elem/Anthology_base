[logic]
active = heli_move@idle
on_hit = hit

[heli_move@idle]
on_info = {+aes_desant_go} heli_move@move
engine_sound = false

[heli_move@move]
path_move = aes_heli_attack_desant_walk_begin3
on_info = {+aes_desant_go} heli_move@move2
max_velocity = 500
engine_sound = true

[heli_move@move2]
path_move = aes_heli_attack_desant_walk3
path_look = aes_heli_attack_desant_look3
on_signal = final | %+aes_desant_wave3% heli_move@move3
combat_ignore = true
on_signal2 = sound | %+aes_first_wave_sound%
max_velocity = 500
engine_sound = true

[heli_move@move3]
path_move = aes_heli_attack_desant_walk3_2
on_signal = down | %+aes_heli_down%
combat_ignore = true
on_signal2 = sound2 | %+aes_choper_hunt_1%
max_velocity = 500
engine_sound = true

[hit]
on_info = {+aes_first_wave_sound} %+aes_choper_hunt_2 =heli_start_flame% heli_move@move4

[heli_move@move4]
path_move = aes_heli_attack_desant_walk3_3
combat_ignore = true
on_info = {=heli_health_le(0.3)} heli_move@death
max_velocity = 500
engine_sound = true

[heli_move@death]
path_move = heli_death_way
invulnerable = true
on_signal = arrived | heli_move@silent
combat_ignore = true
engine_sound = true

[heli_move@silent]
path_move = heli_death_way
engine_sound = false 
combat_ignore = true