[logic]
active = heli_move@idle

[heli_move@idle]
on_info = {+aes_desant_go} heli_move@move
engine_sound = false

[heli_move@move]
path_move = aes_heli_attack_desant_walk_begin5
on_info = {+aes_actor_gate} heli_move@move2
max_velocity = 500
engine_sound = true

[heli_move@move2]
path_move = aes_heli_attack_desant_walk5
path_look = aes_heli_attack_desant_look5
combat_ignore = true
on_signal = desant | %+aes_desant_wave4%
on_signal2 = final | heli_move@move3
max_velocity = 500
engine_sound = true

[heli_move@move3]
path_move = aes_heli_attack_desant_walk5_2
on_info = {=heli_health_le(0.3)} heli_move@death
max_velocity = 500
engine_sound = true

[heli_move@death]
path_move = heli_death_way
on_signal = arrived | heli_move@silent
combat_ignore = true
engine_sound = true

[heli_move@silent]
path_move = heli_death_way
engine_sound = false 
combat_ignore = true