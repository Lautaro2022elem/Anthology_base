[logic]
active = heli_move@idle

[heli_move@idle]
on_info = {+aes_desant_go} heli_move@move

[heli_move@move]
path_move = aes_heli_attack_desant_walk_begin6
on_info = {+aes_actor_gate} heli_move@move2
on_info2 = {+aes_actor_road} heli_move@move3
max_velocity = 500
engine_sound = true

[heli_move@move2]
path_move = aes_heli_attack_desant_walk6
path_look = aes_heli_attack_desant_look6
combat_ignore = true
on_signal = desant | %+aes_desant_wave5%
on_signal2 = final | heli_move@move3
on_info = {+aes_actor_road} heli_move@4
max_velocity = 500
engine_sound = true

[heli_move@move3]
path_move = aes_heli_attack_desant_walk6_2
on_info = {+aes_actor_road} heli_move@move4
max_velocity = 500
engine_sound = true

[heli_move@move4]
path_move = aes_heli_attack_desant_walk6_3
path_look = aes_heli_attack_desant_look6_3
on_signal = desant2 | %+aes_desant_wave6%
on_signal2 = final | heli_move@3
on_info = {=heli_health_le(0.3)} heli_move@death
max_velocity = 500
engine_sound = true

[heli_move@death]
path_move = heli_death_way
invulnerable = true
on_signal = arrived | heli_move@silent
combat_ignore = true
engine_sound = true

[heli_move@silent]
path_move = heli_death_way
invulnerable = true
engine_sound = false 
combat_ignore = true
