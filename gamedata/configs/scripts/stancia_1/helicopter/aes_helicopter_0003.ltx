[logic]
active = heli_move@idle
on_hit = hit

[heli_move@idle]
on_info = {+aes_desant_go} heli_move@move
engine_sound = false

[heli_move@move]
path_move = aes_heli_attack_walk1
path_look = aes_heli_attack_look1
on_actor_in_zone = aes_actor_heli3 | %=heli_set_enemy_actor%
on_info = {=heli_health_le(0.3)} heli_move@death
max_velocity = 500
engine_sound = true

[heli_move@death]
path_move = heli_death_way
on_signal = arrived | heli_move@silent
combat_ignore = true

[heli_move@silent]
path_move = heli_death_way
engine_sound = false 
combat_ignore = true

[hit]
on_info = %+aes_enter_battle_sound%