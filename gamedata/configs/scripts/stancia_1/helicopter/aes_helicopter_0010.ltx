[logic]
active = heli_move@idle
on_hit = hit

[hit]
on_info = {+aes_actor_road2} %+aes_choper_down_2 =heli_start_flame%

[heli_move@idle]
on_info = {+aes_desant_go} heli_move@move
engine_sound = false

[heli_move@move]
path_move = aes_heli_attack_desant_walk_begin8
on_info = {+aes_actor_road2} heli_move@move2
max_velocity = 500
engine_sound = true

[heli_move@move2]
path_move = aes_heli_attack_desant_walk8
path_look = aes_heli_attack_desant_look8
on_signal = desant | %+aes_desant_wave7%
on_signal2 = final | heli_move@@death
on_signal3 = sound | %+aes_lun_desant_sound%
on_info = {=heli_health_le(0.3)} heli_move@@death
combat_ignore = true
max_velocity = 500
engine_sound = true

[heli_move@move3]
path_move = aes_heli_attack_desant_walk8_2
path_look = aes_heli_attack_desant_look8_2
on_info = {=heli_health_le(0.3)} heli_move@death
combat_ignore = true
max_velocity = 500
engine_sound = true

[heli_move@death]
path_move = heli_death_way
on_signal = arrived | heli_move@silent
combat_ignore = true

[heli_move@silent]
path_move = heli_death_way
engine_sound = false 
combat_ignore = true