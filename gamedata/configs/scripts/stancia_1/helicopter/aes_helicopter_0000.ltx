[logic]
active = heli_move@idle

[heli_move@idle]
on_info = {+aes_desant_go} heli_move@move
engine_sound = false

[heli_move@move]
path_move = aes_heli_attack_desant_walk_begin1
on_info = {+aes_desant_go} heli_move@move2
max_velocity = 500
engine_sound = true

[heli_move@move2]
path_move = aes_heli_attack_desant_walk1
path_look = aes_heli_attack_desant_look1
on_signal = final | %+aes_desant_wave1% heli_move@move3
combat_ignore = true
on_signal2 = sound1 | %+aes_2chopers_attack%
max_velocity = 500
engine_sound = true

[heli_move@move3]
path_move = aes_heli_attack_desant_walk1_2
path_look = aes_heli_attack_desant_look1_2
on_actor_in_zone = aes_actor_heli1 | %=heli_set_enemy_actor%
on_info = {=heli_health_le(0.3)} heli_move@death
max_velocity = 500
engine_sound = true

[heli_move@death]
path_move = heli_death_way
on_signal = arrived | heli_move@silent
combat_ignore = true
engine_sound = true

[heli_move@silent]
path_move = heli_death_way
engine_sound = false 
combat_ignore = true