[logic]
active = heli_move@idle
on_hit = hit

[heli_move@idle]
on_info = {+aes_desant_go} heli_move@move
engine_sound = false

[heli_move@move]
path_move = aes_heli_attack_desant_walk_begin4
on_info = {+aes_desant_go} heli_move@move2
max_velocity = 500
engine_sound = true

[heli_move@move2]
path_move = aes_heli_attack_desant_walk4
path_look = aes_heli_attack_desant_look4
combat_ignore = true
on_signal = sound | %+aes_gonduras_sound%
on_signal2 = sound2 | %+aes_choper_anomaly%
on_info = {+aes_choper_flame} %=heli_start_flame%
on_info2 = {=heli_health_le(0.3)} heli_move@death
max_velocity = 500
engine_sound = true

[heli_move@death]
path_move = heli_death_way
on_signal = arrived | heli_move@silent
combat_ignore = true
engine_sound = true

[heli_move@silent]
path_move = heli_death_way
engine_sound = false 
combat_ignore = true

[hit]
on_info = %+aes_choper_anomaly =heli_start_flame%
