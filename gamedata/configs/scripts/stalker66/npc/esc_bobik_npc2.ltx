[walker@def]
invulnerable = true
help_wounded_enabled = false
corpse_detection_enabled = false
gather_items_enabled = false
; ----------------------------------------

[logic@esc_bobik_npc]
suitable = {=check_npc_name(esc_bobik_npc)} true
active = remark@esc_bobik_npc
prior = 200

[remark@esc_bobik_npc]:walker@def
anim = prisoner
on_info = {=dist_to_actor_le(8)} %=play_sound(esc_bobik_help)%
meet = no_meet
target = story | actor
on_signal = sound_end | remark@start_say

[remark@start_say]:walker@def
target = story | actor
anim = prisoner
meet = meet@say_npc_for_actor
on_info = {+esc_dialog_bobik_vagon} remark@anim_ward

[remark@anim_ward]:walker@def
anim = ward
meet = no_meet



[meet@say_npc_for_actor]
close_snd_hello = nil
close_snd_bye = nil
close_anim 		= nil
close_victim 	= actor
far_anim 		= nil
far_victim 		= nil
close_distance  = 0
far_distance 	= 0
use = {=dist_to_actor_le(8) +esc_actor_go_to_wither_bounce_teleport} self, true
allow_break = false
meet_dialog = esc_dialog_bobik_vagon
trade_enable = false