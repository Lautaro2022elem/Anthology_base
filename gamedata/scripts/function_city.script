function Init()
    event("ActorHit"):register(OnActorHit)
end

--]] ------------------------------------------------------------------------------------------------
--/											Callback`s
--]] ------------------------------------------------------------------------------------------------
function OnActorHit(tData)
	if get_object_story_id(tData.oWho:id()) == "city_npc_kolyazin_final" then
		give_info("city_npc_kolyazin_final_hit")
	end
end

